          </div>
          -->
    </div>
    </div>
</div>

<!-- Modal for login -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Login</h5>
        <button id='closeLoginModalButton' type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id='loginForm'>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input id='loginEmail' required type="email" class="form-control" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input id='loginPassword' required type="password" class="form-control">
                </div>
                <div class='row'>
                    <div id='loginModalText' class='col-10'></div>
                    <div class='col-2'>
                        <button id='loginButton' class="float-end btn btn-primary">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    </div>
</div>

<!-- Modal for register -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Register</h5>
        <button id='closeRegisterModalButton' type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form id='registerForm'>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input id='registerEmail' required type="email" class="form-control" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input id='registerPassword' required type="password" class="form-control">
                    <div id="emailHelp" class="form-text">Passwords will be encrypted.</div>
                </div>
                <div class='row'>
                    <div id='registerModalText' class='col-10'></div>
                    <div class='col-2'>
                        <button id='registerButton' class="float-end btn btn-primary">Register</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    </div>
</div>

<!-- sounds -->
<audio id="startStopButtonSound">
    <source src="sounds/startStopButton.mp3" type="audio/mpeg">
</audio>
<audio id="timesUp">
    <source src="sounds/timesUp.mp3" type="audio/mpeg">
</audio>

<!-- adding external javascript files -->
<script src='./js/variables.js'></script>
<script src='./js/helpers.js'></script>
<script src='./js/app.js'></script>
